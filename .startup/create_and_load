echo 'Installing Maven'
if [ -f /etc/redhat-release ]; then
  sudo yum install maven -y
fi

if [ -f /etc/lsb-release ]; then
  sudo apt-get install maven -y
fi

echo 'Building schema'
sudo mvn clean compile exec:java -Dexec.mainClass="com.datastax.demo.SchemaSetup" -DcontactPoints=node0

echo 'Creating Cores'
sudo dsetool create_core tika.metadata generateResources=true

echo 'Starting load data -> /tmp/loader.log'
sudo nohup mvn clean compile exec:java -Dexec.mainClass="com.datastax.tika.Main"  -DcontactPoints=node0 -DnoOfEvents=10000000 > /tmp/loader.log &

sleep 2

echo 'Finished setting up'
